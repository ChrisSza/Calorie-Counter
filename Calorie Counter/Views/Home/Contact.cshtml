@using Calorie_Counter.Models

@model Calorie_Counter.Models.Message

@{
    ViewBag.Title = "Contact";
}

<br />
<script>
    function ThankYou() {
        alert("Thank You or Contacting us we will get back to you within 24 hours!")
    }

</script>

<div id="contact" class="container-fluid bg-grey">
    <h2 class="text-center">Contact</h2>
    <div class="row">
        <div class="col-sm-5">
            <p>Contact us and we'll get back to you within 24 hours.</p>
            <p>Glasgow, Scotland</p>
            <p> +44 12345687654</p>
            <p> contact@caloriecounter.com</p>
        </div>



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-sm-7 slideanim">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class=" col-sm-6 form-group">
                        @Html.TextBoxFor(model => model.FullName, new { @placeholder = "Name", @class = "form-control", @id = "name" })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                    <div class=" col-sm-6 form-group">
                        @Html.TextBoxFor(model => model.EmailAddress, new { @placeholder = "Email", @class = "form-control", @id = "email" })
                        @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.TextAreaFor(model => model.Comment, new { @placeholder = "Comment", @class = "form-control", @id = "comment" })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                <br />
                <div class="row">
                    <div class=" col-sm-12 form-group">
                        <input type="submit" value="Send" class="btn btn-default pull-right" onclick="ThankYou()" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

